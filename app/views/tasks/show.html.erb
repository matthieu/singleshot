<html>
  <head>
    <title>Singleshot &mdash; <%= h task.title %></title>
    <%= javascript_include_tag :all, :cache=>true %>
    <%= stylesheet_link_tag 'common', 'frame', 'task', :cache=>true %>
  </head>
  <body>
    <div id='header'>
      <ol class='sections'>
        <li class='section logo'><%= link_to image_tag('singleshot-150-30.png', :alt=>'Singleshot'), tasks_url, :title=>t('.back') %></li>
        <li class='section meta'>
          <%= content_tag 'span', h(task.title), :title=>"#{task.title}\n\n#{task.description}", :class=>'title' %>
          <%= link_to image_tag('blue_down.png'), '#details', :class=>'dropdown', :title=>t('.more') %>
        </li>
        <li class='section actions'>
          <%= button_to t('task.actions.claim.button'), task_url(task, 'task[owner]'=>authenticated), :title=>t('task.actions.claim.title') if authenticated.can_claim?(task) %>
          <%= button_to t('task.actions.done.button'), task_url(task, 'task[status]'=>'completed'), :title=>t('task.actions.done.title') if !@iframe_url && authenticated.can_complete?(task) %>
          <%= button_to t('task.actions.cancel.button'), task_url(task, 'task[status]'=>'cancelled'), :confirm=>t('task.actions.cancel.confirm'), :title=>t('task.actions.cancel.title') if authenticated.can_cancel?(task) %>
        </li>
      </ol>
    </div>
    <div id='details' class='dropdown'>
      <div class='description'><%= auto_link(sanitize(simple_format(task.description))) %></div>
      <hr>
      <ul class='meta'>
        <%= content_tag 'li', t("task.priority.#{task.priority}"), :class=>"priority priority-#{task.priority}" %>
        <%= content_tag 'li', t('.due_on', :date=>l(task.due_on, :format=>:long)), :class=>'due_on' if task.due_on %>
      </ul>
      <ol class='activities'>
        <% task.activities.each do |activity| %>
          <li class='activity'>
            <span class='title'><%= t "activity.expanded.#{activity.name}", :person=>link_to_person(activity.person), :task=>t('.this') %></span>
            <span class='created'><%= time_ago_in_words activity.created_at %></span>
          </li>
        <% end %>
      </ol>
    </div>
    <div id='shadow'></div>
    <%= content_tag 'iframe', nil, :id=>'frame', :noresize=>'noresize', :src=>@iframe_url if @iframe_url %>
  </body>
</html>
