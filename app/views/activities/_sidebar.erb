<li class='section'>
  <h2><%= t('.heading') %></h2>
  <ol class='activities'>
    <% activities.each do |activity| %>
      <% content_tag_for 'li', activity do %>
        <span class='title'><%= translate "activity.#{activity.name}", :person=>link_to_person(activity.person), :task=>link_to(h(activity.task.title), task_url(activity.task)) %></span>
        <span class='published'><%=t '.published', :ago=>time_ago_in_words(activity.created_at) %></span>
      <% end %>
    <% end %>
  </ol>
  <%= link_to t('.link'), activities_url %>
</li>
