<%  @atom_feed_url = activities_url(:format=>:atom, :access_key=>authenticated.access_key) %>
<%= bar_sparkline @datapoints.call, :title=>"Activity in the last 30 days" %>
<ol class='dates hfeed'>
  <% for date, activities in @activities.group_by{ |a| a.created_at.to_date } %>
    <li class='date'>
      <h2><%= relative_date(date).humanize %></h2>
      <ol class='activities'>
        <% activities.each do |activity| %>
          <% content_tag_for 'li', activity, :class=>'hentry' do %>
            <%= content_tag 'span', activity.created_at.strftime('%H:%M %p'), :title=>l(activity.created_at), :class=>'published' %>
            <%= translate "activity.expanded.#{activity.name}", :person=>link_to_person(activity.person), :task=>link_to_task(activity.task) %>
          <% end %>
        <% end %>
       </ol>
    </li>
  <% end %>
</ol>
<%= will_paginate @activities %>
