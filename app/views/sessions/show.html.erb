<% form_for :session, :url=>session_url, :html=>{ :class=>'login' } do |f| %>
  <fieldset>
    <%= content_tag 'p', flash[:error], :class=>'error' if flash[:error] %>
    <dl>
      <dt><%= label_tag 'login', t('sessions.login.label') %></dt>
      <dd><%= text_field_tag 'login', nil, :size=>30, :title=>t('sessions.login.hint') %></dd>
      <dt><%= label_tag 'password', t('sessions.password.label') %></dt>
      <dd><%= password_field_tag 'password', nil, :size=>30, :title=>t('sessions.password.hint') %></dd>
      <dd><%= submit_tag t('sessions.login.button'), :class=>'button' %></dd>
    </dl> 
  </fieldset>
<% end %>
<%= javascript_tag "$('#login').focus()" %>
