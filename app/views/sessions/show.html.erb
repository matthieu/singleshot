<% form_for :session, :url=>session_url, :html=>{ :class=>'login' } do %>
  <fieldset>
    <%= content_tag 'p', flash[:error], :class=>'error' if flash[:error] %>
    <dl>
      <dt><%= label_tag 'username', t('.username.label') %></dt>
      <dd><%= text_field_tag 'username', nil, :size=>40, :title=>t('.username.hint'), :class=>'auto_focus' %></dd>
      <dt><%= label_tag 'password', t('.password.label') %></dt>
      <dd><%= password_field_tag 'password', nil, :size=>40, :title=>t('.password.hint') %></dd>
      <dt></dt><dd><%= submit_tag t('.login.button'), :title=>t('.login.hint') %></dd>
    </dl> 
  </fieldset>
<% end %>
